  <style>
    @import url('https://fonts.googleapis.com/css2?family=Volkhov:wght@700&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Montserrat:wght@300;800&display=swap');

    body {
        max-height: 100%;
        margin: 0;
        padding: 0;
        background-image: url("https://media.istockphoto.com/photos/empty-gray-studio-room-used-as-background-for-display-your-products-picture-id913062234?k=20&m=913062234&s=612x612&w=0&h=dJ8lsrW_xbu6IvN7wK5rHnMqIYdquNbl5fYebUiYYuc=");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    header{
        font-family: 'Volkhov', serif;
        font-size: 5rem;
        padding-bottom: 7rem;
        padding-top: 2rem;
        text-align: center;
    }

    /* Error pop-up styling */

    .blink {
        animation: blinkingText 1.5s infinite;
        color: red;
        font-family: Montserrat;
        font-weight: 700;
        margin: 0 auto;
        padding-top: 1rem;
        text-align: center;
        width: 50%;
    }

    @keyframes blinkingText{
        0%{     color: red;    }
        25%{    color: rgb(255, 90, 90); }
        50%{    color: rgb(255, 180, 180); }
        74%{    color: rgb(255, 90, 90); }
        100%{   color: red; }
    }

    /* Page content styling */

    .moto-left{
        font-size: 3.5rem; 
        padding-top: 2rem;
    }

    .login-button{
        font-weight: bold;
        margin-left: -250px;
        text-align: center; 
    }

    .right-logo{
        padding-bottom: 3rem;
        text-align: center;
    }

    /* flex conatiner */

    .flex-container {
        display: flex;
    }

    .flex-child {
        flex: 1;
        font-family: 'Montserrat', sans-serif;
        text-align: center; 
    }  

    /* Google sign in button styling */

    .btn:link,
    .btn:visited {
        border-radius: 100px;
        display: inline-block;
        padding: 15px 40px;
        position: absolute;
        text-decoration: none;
        text-transform: uppercase;
        transition: all .2s;
    }

    .btn:hover {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transform: translateY(-3px);
    }

    .btn:active {
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        transform: translateY(-1px);
    }

    .btn-white {
        background-color: #d1d1d1;
        color: #777;
    }

    .btn::after {
        border-radius: 100px;
        content: "";
        display: inline-block;
        height: 100%;
        left: 0;
        position: absolute;
        top: 0;
        transition: all .4s;
        width: 100%;
        z-index: -1;
    }

    .btn-white::after {
        background-color: #fff;
    }

    .btn:hover::after {
        opacity: 0;
        transform: scaleX(1.4) scaleY(1.6);
    }

    .btn-animated {
        animation: moveInBottom 5s ease-out;
        animation-fill-mode: backwards;
    }
  </style>
  
    <header>
      CENTURY MENS SOCIETY
    </header>

    <section class="flex-container">
      <div class="flex-child moto-left">
        <p>HUMILITY</p>
        <p>LOYALTY</p>
        <p>SERVICE</p>
        <p>TRADITION</p>
      </div>

      <div class="flex-child">
        <div class="right-logo" >
          <img src="/assets/logo.png" class="img-fluid" alt="CMS logo">
        </div>
        <div class="login-button">
          <%= link_to "Login with Google", member_google_oauth2_omniauth_authorize_path, {class: 'btn btn-7 btn-7b btn-white btn-animate'} %>
        </div>    
      </div>
    </section>
<html lang="en">
  <head>
    
    <style>
      .divider:after,
      .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
      }

      .loginbutton{
        width: 100%;
        height: 50px;
        background-color: CornflowerBlue;
        color: white;
        font-weight: bold;
        box-shadow: 1px 1px 1px grey;
      }
    </style>
  </head>
  <body>
    <section class="vh-100">
      <div class="container py-5 h-100">
      
        <div class="row d-flex align-items-center justify-content-center h-100">
          <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="/assets/logo.png" class="img-fluid" alt="CMS logo">
          </div>
          <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <form>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" placeholder="email@tamu.edu" id="form1Example13" class="form-control form-control-lg" />
                
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="password" placeholder="password" id="form1Example23" class="form-control form-control-lg" />
              </div>

              <div class="d-flex justify-content-around align-items-center mb-4">
                <!-- Checkbox -->
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="form1Example3"
                    checked
                  />
                  <label class="form-check-label" for="form1Example3"> Remember me </label>
                </div>
                <a href="#!">Forgot password?</a>
              </div>

              <!-- Submit button -->
              <button type="submit" class="loginbutton">Sign in</button>

              <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
              </div>

              <%= link_to "Sign in with Google", member_google_oauth2_omniauth_authorize_path %>

            </form>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>